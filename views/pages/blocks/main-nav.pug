-
  var mainNav = {
  'Главная': '/',
  'Меню': '/menu',
  'О нас': '/about',
  'Контакты': '/contact'
  }

nav.main-nav
  .main-nav__toggle
    span
    span
    span
  ul.main-nav__list
    each href, link in mainNav
      li.main-nav__item
        if link === page
          a.main-nav__link.active(href=href)= link
        else
          a.main-nav__link(href=href)= link